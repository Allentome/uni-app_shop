page {
  background-color: #eee;
}
.fullbox {
  margin: 0 auto;
  width: 90%;
  padding: 15rpx;
  border-radius: 25rpx;
  margin-top: 20rpx;
  background-color: white;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.fullbox .box-left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.fullbox .box-left checkbox {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
  margin-top: 80rpx;
  float: left;
}
.fullbox .box-left image {
  width: 65%;
  height: 100%;
  float: right;
}
.fullbox .box-right {
  padding: 5rpx 10rpx;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.fullbox .box-right .font {
  font-size: 28rpx;
  width: 460rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.fullbox .box-right picker {
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  background-color: #eee;
}
.fullbox .box-right .price {
  margin-top: 20rpx;
  color: red;
}
.fullbox .box-right .button {
  text-align: center;
  margin-top: -30rpx;
  margin-right: 50rpx;
}
.fullbox .box-right .button button {
  margin: 0 auto;
  font-size: 32rpx;
  width: 50rpx;
  height: 50rpx;
  float: right;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.fullbox .box-right .button text {
  padding: 0 20rpx;
  float: right;
}
.pay {
  margin: 0 auto;
  justify-items: center;
  height: 100rpx;
  width: 100%;
  background-color: white;
  position: absolute;
  bottom: 0;
}
.pay .pay_left {
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  line-height: 100rpx;
}
.pay .pay_left checkbox {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.pay .pay_right {
  float: right;
  font-size: 30rpx;
  margin-right: 20rpx;
  line-height: 100rpx;
}
.pay .pay_right text {
  color: red;
  margin-right: 20rpx;
}
.pay .pay_right button {
  width: 150rpx;
  color: white;
  border-radius: 35rpx;
  background-color: red;
  margin-top: 10rpx;
  font-size: 30rpx;
  float: right;
  height: 70rpx;
}

